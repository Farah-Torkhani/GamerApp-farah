<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_margin="10dp"

    >



    <LinearLayout
        android:layout_width="386dp"
        android:layout_height="72dp">

        <ImageView
            android:id="@+id/navigationIcon"
            android:layout_width="69dp"
            android:layout_height="53dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:src="@drawable/navigatebefore_foreground" />

        <Space
            android:layout_width="45dp"
            android:layout_height="68dp"
            android:layout_weight="1" />


        <Switch
            android:id="@+id/switchDarkMode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:gravity="end" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="46dp"
        android:layout_margin="8dp"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ForgotText"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start"
            android:text="Enter the code  sent to you by Email or Mobile Number"
            android:textColor="@color/Secondary"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="53dp"
        android:layout_margin="8dp"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/descriptiontext"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="start"
            android:text="Please enter your new password  to confirm it "
            android:textColor="@color/Secondary"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="center_horizontal"

            app:endIconTint="@color/colorPrimary"
            app:startIconTint="@color/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="349dp"
                android:layout_height="match_parent"
                android:background="@drawable/edit_textbg"
                android:drawableStart="@drawable/lock_foreground"
                android:drawableEnd="@drawable/eye_foreground"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="center_horizontal"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/colorPrimary"
            app:startIconDrawable="@drawable/lock_foreground"
            app:startIconTint="@color/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="346dp"
                android:layout_height="52dp"
                android:background="@drawable/edit_textbg"
                android:hint="Confirm Password"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>










    <Button
        android:id="@+id/RegisterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_primary_button"
        android:gravity="center"
        android:clickable="true"
        />








</LinearLayout>
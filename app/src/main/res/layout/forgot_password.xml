<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_margin="10dp"

    >



    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="46dp"
        android:layout_margin="8dp"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/navigationIcon"
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:src="@drawable/navigatebefore_foreground"
            android:layout_gravity="start"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="46dp"
        android:layout_margin="8dp"
        android:gravity="start"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/ForgotText"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="start"
        android:text="Forgot Password"
        android:textColor="@color/Secondary"
        android:textSize="20sp"
        android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="357dp"
        android:layout_height="53dp"
        android:layout_margin="8dp"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/descriptiontext"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="start"
            android:text="Please enter your registred email to reset your Password"
            android:textColor="@color/Secondary"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="75dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="center_horizontal"
            app:startIconDrawable="@drawable/mail_foreground"
            app:startIconTint="@color/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="360dp"
                android:layout_height="53dp"
                android:background="@drawable/edit_textbg"
                android:baselineAligned="false"
                android:hint="Email"
                app:boxStrokeColor="@color/transparent"
                app:startIconTint="@color/colorPrimary" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>










    <Button
        android:id="@+id/RegisterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_primary_button"
        android:gravity="center"
        android:clickable="true"
        />


    <LinearLayout
        android:layout_width="302dp"
        android:layout_height="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_margin="7dp">

        <TextView
            android:id="@+id/ORTextButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:text="OR"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"

            />
    </LinearLayout>

    <Button
        android:id="@+id/Sendsms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Send SMS"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_primary_button"
        android:gravity="center"
        android:clickable="true"
        />




</LinearLayout>
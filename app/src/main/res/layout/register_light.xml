<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".RegisterScreen"
    >

    <LinearLayout
        android:layout_width="378dp"
        android:layout_height="49dp">

        <ImageView
            android:id="@+id/navigationIcon"
            android:layout_width="69dp"
            android:layout_height="53dp"
            android:layout_gravity="start"
            android:gravity="start"
            android:src="@drawable/navigatebefore_foreground" />

        <Space
            android:layout_width="45dp"
            android:layout_height="68dp"
            android:layout_weight="1" />


        <Switch
            android:id="@+id/switchDarkMode"
            android:layout_width="48dp"
            android:layout_height="38dp"
            android:layout_gravity="end"
            android:gravity="end" />

    </LinearLayout>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="157dp"
        android:layout_height="152dp"
        app:srcCompat="@drawable/ic_logo" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="75dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Design.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:gravity="center_horizontal"
            app:helperText="@string/required"
            app:helperTextTextColor="@color/Primary"

            app:startIconTint="@color/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fullnameinput"
                android:layout_width="330dp"
                android:layout_height="58dp"
                android:background="@drawable/edit_textbg"
                android:baselineAligned="false"
                android:hint="FullName"
                android:drawableStart="@drawable/profile_foreground"
                app:boxStrokeColor="@color/transparent"
                app:startIconTint="@color/colorPrimary" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="75dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:gravity="center_horizontal"
            app:startIconTint="@color/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="349dp"
                android:layout_height="54dp"
                android:id="@+id/emailinput"
                android:background="@drawable/edit_textbg"
                android:baselineAligned="false"
                android:drawableStart="@drawable/mail_foreground"
                android:hint="Email"
                app:boxStrokeColor="@color/transparent"
                app:startIconTint="@color/colorPrimary" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            app:endIconTint="@color/colorPrimary"
            app:helperText="@string/required"
            app:helperTextTextColor="@color/Primary"
            app:startIconTint="@color/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordInput"
                android:layout_width="349dp"
                android:layout_height="54dp"
                android:background="@drawable/edit_textbg"
                android:drawableStart="@drawable/lock_foreground"
                android:drawableEnd="@drawable/eye_foreground"
                android:hint="Password"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_margin="1dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            app:helperText="@string/required"
            app:helperTextTextColor="@color/Primary"
            android:gravity="center_horizontal"
            app:endIconTint="@color/colorPrimary"
            app:startIconTint="@color/colorPrimary">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="349dp"
                android:layout_height="54dp"
                android:background="@drawable/edit_textbg"
                android:drawableStart="@drawable/lock_foreground"
                android:drawableEnd="@drawable/eye_foreground"
                android:id="@+id/confirmpasswordInput"
                android:hint="Confirm Password"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>



    <Button
        android:id="@+id/RegisterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_primary_button"
        android:gravity="center"
        android:clickable="true"
        />

        <TextView
            android:id="@+id/terms"
            android:layout_width="223dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="By registering you agree to our Terms and Conditions and privacy"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />





</LinearLayout>